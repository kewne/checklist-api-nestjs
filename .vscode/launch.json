    "version": "0.2.0",
    "configurations": [
        {
            "command": "pnpm start:dev",
            "name": "Run",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "name": "vscode-jest-tests.v2.checklist-api-nestjs",
            "request": "launch",
            "args": [
                "test",
                "--",
                "--runInBand",
                "--watchAll=false",
                "--testNamePattern",
                "${jest.testNamePattern}",
                "--runTestsByPath",
                "${jest.testFile}"
            ],
            "cwd": "/workspaces/checklist-api-nestjs",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeExecutable": "npm"
        }
    ]
}